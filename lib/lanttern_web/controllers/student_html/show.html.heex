<.header>
  Student <%= @student.id %>
  <:subtitle>This is a student record from your database.</:subtitle>
  <:actions>
    <.link href={~p"/admin/schools/students/#{@student}/edit"}>
      <.button>Edit student</.button>
    </.link>
  </:actions>
</.header>

<.list>
  <:item title="Name"><%= @student.name %></:item>
  <:item title="School"><%= @student.school.name %></:item>
  <:item title="Classes">
    <%= @student.classes
    |> Enum.map(& &1.name)
    |> Enum.join(", ") %>
  </:item>
</.list>

<.back navigate={~p"/admin/schools/students"}>Back to students</.back>
